{
    "name": "API Server Dev - Client",
    "build": {
        "dockerfile": "../Dockerfile.vsdev",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "ms-python.black-formatter"
            ]
        }
    },
    "runArgs": [
        "--init",
        // "--rm",
        "--name", "api_server-client-dev_container",
        "-v",
        "${localWorkspaceFolder}:/app"
    ],
    "workspaceFolder": "/app"
}